
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        /** {
            margin: 0px auto;
        }*/
        html, body {
            height: 100%;
        }

        table, th, td {
            border: 1px solid black;
        }

        table {
            border-spacing: 0px;
        }

        #GameMessage {
            text-align: center;
            opacity: 0.8;
            background-color: white;
            position: absolute;
            left: 0px;
            top: 0px;
            height: 600px;
            width: 600px;
            visibility: hidden;
        }

        #MessageText {
            color: red;
            font-size: 40px;
        }

        #ButtonOK {
            color: red;
            font-size: 40px;
        }

        #interactionLockMask {
            height: 600px;
            width: 600px;
            opacity: 0.0;
            background-color: white;
            position: absolute;
            left: 0px;
            top: 0px;
            visibility: hidden;
        }

        .dot {
            height: 5px;
            width: 5px;
            background-color: red;
            border-radius: 50%;
            position: fixed;
            top: 235px;
            left: 235px;
        }

        .dropbtn {
            background-color: #3498DB;
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

            .dropbtn:hover, .dropbtn:focus {
                background-color: #2980B9;
            }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            overflow: auto;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

        .dropdown a:hover {
            background-color: #ddd;
        }

        .show {
            display: block;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <title>JSW's Gomoku</title>
</head>
<body>
    <div id="wholeBody">
        <div>
            <span class="dot"></span>
            <table id="TheBoard" style="width: 450px; height: 450px">
                @{
                    for (int row = 0; row < 15; row++)
                    {
                        <tr height="6%">
                            @for (int col = 0; col < 15; col++)
                            {
                                <td id="@(row + "+" + col)" width="6%">@*@row,@col*@</td>
                            }
                        </tr>
                    }
                }
            </table>
        </div>
        <div id="GameMessage">
            <p id="MessageText">Hello wolrd!</p>
            <button type="button" id="ButtonOK">OK</button>
        </div>
        <div id="interactionLockMask">
        </div>
    </div>
    <div class="dropdown">
        <button onclick="myFunction()" class="dropbtn">選單</button>
        <div id="myDropdown" class="dropdown-content">
            @*<a href="Play">重新開始</a>*@
            @*<a href="javascript:LetAIGofirst();">重新開始並讓電腦先下</a>*@
            <a href="javascript:SetDifficulty(8);myFunction();">沉思者AI</a>
            <a href="javascript:SetDifficulty(6);myFunction();">大師AI</a>
            <a href="javascript:SetDifficulty(4);myFunction();">普通AI(預設)</a>
            <a href="javascript:SetDifficulty(2);myFunction();">初學者AI</a>
        </div>
    </div>
    <script>
        chessCounter = 0;
        interactionLock = 0;
        function PutChessByObj(e) {
            if (chessCounter % 2 == 0) {
                $(e).css("background", "url('/Images/BlackChess.png') no-repeat");
                $(e).css("background-size", "cover");
            }
            else {
                $(e).css("background", "url('/Images/WhiteChess.png') no-repeat");
                $(e).css("background-size", "cover");
            }
            chessCounter++;
        }

        function PutChessByXY(y, x) {
            $('#TheBoard td').css('border-color', 'black');
            var td = document.getElementById(y + "+" + x);
            $(td).css('border-style', 'solid');
            $(td).css('border-color', 'red');
            $(td).css('border-width', '1px');
            PutChessByObj(td);
        }

        $(document).ready(function () {
            $.ajaxSetup({ cache: false });

            //PutChessByXY(7, 7);

            $('#TheBoard td').on("click",
                function () {
                    if ("" == this.style["background-image"]) {
                        $('#interactionLockMask').css('visibility', 'visible');
                        PutChessByObj(this);
                        var args = this.id.split("+");
                        $.getJSON("/Gomoku/AI",
                            { posY: args[0], posX: args[1] },
                            function (data) {
                                PutChessByXY(data.yAI, data.xAI);
                                if (99 == data.flag) {
                                    $('#GameMessage #MessageText').text(data.message);
                                    $('#GameMessage').css('visibility', 'visible');
                                }
                                else if (-99 == data.flag) {
                                    $('#GameMessage #MessageText').text(data.message);
                                    $('#GameMessage').css('visibility', 'visible');
                                }
                                $('#interactionLockMask').css('visibility', 'hidden');
                            }
                        );
                    }
                });
            $('#ButtonOK').on("click", function () {
                location.reload();
            });
        });

        function LetAIGofirst() {
            $('#TheBoard td').css("background", "");
            $.getJSON("/Gomoku/AIGoesFirst",
                { },
                function (data) {
                }
            );
            PutChessByXY(7, 7);
        }

        function SetDifficulty(d) {
            $('#TheBoard td').css("background", "");
            $.getJSON("/Gomoku/SetDifficulty",
                { difficulty:d},
                function (data) {
                }
            );
        }

        function myFunction() {
            $('#myDropdown').toggle();
        }

    </script>
</body>
</html>
